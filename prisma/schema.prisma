generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Campaign {
  id              String @id @default(cuid()) @map("_id") @db.ObjectId
  creator         String
  campaignIndex   Int
  name            String
  symbol          String
  uri             String
  donationGoal    Int
  depositDeadline Int
  tradeDeadline   Int
  timestamp       Int
}

model Transaction {
  id        String @id @default(cuid()) @map("_id") @db.ObjectId
  signature String
  block     String
  blockTime Int
}
